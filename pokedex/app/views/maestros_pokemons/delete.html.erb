<div class="pokemons">
  <%= link_to("<< Back to List", pokemons_path, :class => 'back-link') %>
  <h2>Delete Pokemon</h2>

  <%= form_for(@maestro_pokemon, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this Pokemon?</p>

    <p><%= image_tag(f.object.pokemon.sprites.last.front_default) %></p>
    <p><%= f.object.pokemon.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Pokemon", :class =>"button") %>
    </div>

  <% end %>
</div>