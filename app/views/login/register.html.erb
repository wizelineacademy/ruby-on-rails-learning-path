

<div class="g-sidenav-show  bg-gray-100">

  <section class="min-vh-100 mb-8">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3" style="background-image: url('../assets/img/pokemon.png'); background-position: center;background-size: contain; background-repeat: no-repeat;">
      <span class="mask bg-gradient-dark opacity-0"></span>
      <div class="container">
      </div>
    </div>
    <div class="container">
      <div class="row mt-lg-n10 mt-md-n11 mt-n10">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
          <div class="card z-index-0">
            <div class="card-header text-center pt-4">
              <h5>Register</h5>
            </div>
            <div class="card-body">
              <% if flash[:error] %>
                <div class="alert alert-danger" role="alert">
                  <strong>Error: </strong> <%= flash[:error]%>
                </div>
              <% end %>
              <% if flash[:success] %>
                <button class="btn btn-success btn-sm mb-2" type="button" disabled>
                  <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    User created successfully, you will be redirected shortly...
                </button>
                <script>
                  setTimeout(() => {
                     window.location = "<%= login_auth_path %>";
                  }, 3000);
                </script>
              <% end %>  
              <%= form_with do |form| %>
                <div class="mb-3">
                  <%= form.text_field :user_name, class: 'form-control', placeholder: "User name", value: flash[:user_name].nil? ? nil : flash[:user_name]%>
                </div>
                <div class="mb-3">
                  <%= form.text_field :email, class: 'form-control', placeholder: "Email", value: flash[:email].nil? ? nil : flash[:email]%>
                </div>
                <div class="mb-3">
                  <%= form.password_field :password, class: 'form-control', placeholder: "Password", value: flash[:password].nil? ? nil : flash[:password]%>
                </div>
                <div class="text-center">
                  <%= form.submit class: 'btn bg-gradient-dark w-100 my-4 mb-2', value: "Register"%>
                </div>
                <p class="text-sm mt-3 mb-0">Already have an account? <a href="javascript:;" class="text-dark font-weight-bolder">Sign in</a></p>
              <% end %>




            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--   Core JS Files   -->
  <script src="../assets/js/core/popper.min.js"></script>
  <script src="../assets/js/core/bootstrap.min.js"></script>
  <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
  <!-- Github buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="../assets/js/soft-ui-dashboard.min.js?v=1.0.3"></script>
</div>

