<% @page_title = "Admin Login" %>

<div class="jumbotron pt-5">
  <div class="container">
    <%= form_tag(sessions_attempt_login_path, :method => :post) do %>

    <div class="form-group">
      <%= label_tag(:email) %>
      <%= text_field_tag(:email, params[:email], class: 'form_control') %>
    </div>
    <div class="form-group">
      <%= label_tag(:password) %>
      <%= password_field_tag(:password, nil, class: 'form_control') %>
    </div>
    <%= submit_tag("Log In", class: "btn btn-primary") %>
    <% end %>
  </div>
</div>
