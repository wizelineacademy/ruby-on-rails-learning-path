<!DOCTYPE html>
<% @page_title = "Main" %>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    </head>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg bg-secondary text-uppercase" id="mainNav">
            <div class="container">
                <a class="navbar-brand">Welcome - <%= @username %></a>
            </div>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item mx-0 mx-lg-1"><%= link_to("Edit Profile", user_path(@user), class: 'nav-link py-3 px-0 px-lg-3 rounded') %></li>
                        <li class="nav-item mx-0 mx-lg-1"><%= link_to("Logout", access_logout_path, class: 'nav-link py-3 px-0 px-lg-3 rounded') %></li>
                    </ul>
                </div>
        </nav>
        <br>
        <!-- Portfolio Section-->
        <section class="page-section portfolio" id="portfolio">
            <div class="container">
                <!-- Portfolio Section Heading-->
                <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Your Pokemons</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                    <div class="divider-custom-line"></div>
                </div>
                <div class="text-center mt-4">
                    <%= link_to('<i class="fas fa-plus me-2"></i>Add new custom pokemon</a>'.html_safe, 
                    new_pokemon_path, remote: true, class: 'btn btn-xl btn-outline-dark mx-2') %>
                    <%= link_to('<i class="fas fa-random me-2"></i>Generate pokemons</a>'.html_safe, 
                    set_pokemons_path, class: 'btn btn-xl btn-outline-dark') %>
                </div>
                <!-- Portfolio Grid Items-->
                <div class="row justify-content-center">
                    <!-- Portfolio Items-->
                    <% unless @pokemons.nil? %>
                    <% @pokemons.each do |pokemon| %>
                    <div class="col-md-1 col-lg-1 mb-1">
                            <img class="img-fluid" src="<%= pokemon.sprite_link %>" alt="..." />
                            <p><%= pokemon.name.capitalize %></p>
                            <%= link_to("Show", pokemon_path(pokemon)) %>
                            <%= link_to("Edit", edit_pokemon_path(pokemon)) %>
                            <%= link_to("Delete", delete_pokemon_path(pokemon)) %>
                    </div>
                    <% end %>
                    <% end %>
                </div>
            </div>
        </section>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <!-- * *                               SB Forms JS                               * *-->
        <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    </body>
</html>
